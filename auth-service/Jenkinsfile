pipeline {
    agent any

    tools {
        maven 'maven3'     // Name from Global Tool Config
        jdk 'java17'       // Name from Global Tool Config
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/adi612/microServiceProject'
            }
        }

        stage('Build') {
            steps {
                dir('auth-service') {     // üëà Move into auth-service folder
                    sh 'mvn clean install -DskipTests'
                }
            }
        }

        stage('Test') {
            steps {
                dir('auth-service') {
                    sh 'mvn test'
                }
            }
        }

        stage('Package') {
            steps {
                dir('auth-service') {
                    sh 'mvn package -DskipTests'
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Auth-service build succeeded!'
        }
        failure {
            echo '‚ùå Auth-service build failed!'
        }
    }
}
