pipeline {
    agent any

    tools {
        maven 'Maven3'   // Make sure you configured Maven3 in Jenkins Global Tool Configuration
        jdk 'JDK17'      // Make sure JDK17 is configured in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                // This checks out the full repo
                checkout scm
            }
        }

        stage('Build Auth Service') {
            steps {
                dir('auth-service') {
                    sh 'mvn clean install -DskipTests'
                }
            }
        }

        stage('Test Auth Service') {
            steps {
                dir('auth-service') {
                    sh 'mvn test'
                }
            }
        }

        stage('Package Auth Service') {
            steps {
                dir('auth-service') {
                    sh 'mvn package'
                }
            }
        }
    }

    post {
        success {
            echo "✅ Build and Tests for Auth-Service completed successfully!"
        }
        failure {
            echo "❌ Build failed. Check logs!"
        }
    }
}
